CREATE DATABASE IF NOT EXISTS clientesLista;

USE clientesLista;

-- Tabela para itens individuais
CREATE TABLE IF NOT EXISTS itens (
    id INT AUTO_INCREMENT PRIMARY KEY,
    produto VARCHAR(255) NOT NULL,
    quantidade INT NOT NULL,
    sabor VARCHAR(255)
);

-- Tabela para combos
CREATE TABLE IF NOT EXISTS combos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    quantidade_combos INT NOT NULL,
    quantidade_tipos INT NOT NULL
);
