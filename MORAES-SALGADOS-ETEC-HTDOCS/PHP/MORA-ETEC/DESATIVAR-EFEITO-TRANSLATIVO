<button  onclick="desactive()">teste</button>

<script src="./JS/desactiveHover.js"></script>



const cards = document.querySelector("#menuContent");

function desactive() {
    cards.classList.add('nopHover');
}

.contentMenu.nopHover {
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 300ms;
    box-shadow: 0px 0px 10px 1px #000000ee;
    border-radius: 5px;
    transform: rotateY(180deg);
  }